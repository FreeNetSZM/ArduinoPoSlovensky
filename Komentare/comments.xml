<Module>
    <ModulePrefs title="Include gadget (iframe)" title_url="http://www.arduinoposlovensky.sk" description="Google komentáre pre WEB" thumbnail="http://sites.google.com/site/gadgetsbysj/gadgets/iframe/iframe-thumbnail.png" height="800" width="600" author="Rastislav Šášik" author_email="info.arduinoposlovensky@gmail.com">
      <Require feature="dynamic-height"/>
    </ModulePrefs>
    <UserPref name="iframeURL" display_name="URL adresa pre komentáre:" required="true"/>
    <Content type="html" view="default,canvas">
      <![CDATA[
        <script src="https://apis.google.com/js/plusone.js"></script>
        <div id="comments"></div>
        <script type="text/javascript"> 
          gadgets.util.registerOnLoadHandler(doRender); 
          function doRender(){ 
              var prefs = new _IG_Prefs();
              var iframeURL = prefs.getString('iframeURL');
              gapi.comments.render('comments', {
                href: iframeURL,   
                width: Math.round(window.innerWidth * 0.95),
                first_party_property: 'BLOGGER',
                view_type: 'FILTERED_POSTMOD'
              });
          }
        </script>
      ]]>
    </Content>
</Module>
